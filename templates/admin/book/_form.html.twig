{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">{{ form_row( form.title ) }}</div>
        <div class="col-md-6">{{ form_row( form.editor ) }}</div>
    </div>
    <div class="row">
        <div class="col-md-8">{{ form_row( form.synopsis ) }}</div>
    </div>
    <div class="row">
        <div class="col-md-8">{{ form_row( form.property ) }}</div>
    </div>
    <div class="row">
        <div class="col-md-2">{{ form_row( form.parution ) }}</div>
        <div class="col-md-2">{{ form_row( form.copy ) }}</div>
        <div class="col-md-2">{{ form_row( form.price ) }}</div>
    </div>
            
    {{ form_rest(form) }}
    <button class="btn btn-primary">{{ button | default('Enregistrer') }}</button>
{{ form_end(form) }}